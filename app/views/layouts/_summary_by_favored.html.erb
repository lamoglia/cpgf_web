<div class="table-responsive">
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th class="col-xs-8">Descrição</th>
        <th class="col-xs-4">Valor</th>
      </tr>
    </thead>
    <tbody>
      <% data.each do |favored| %>
        <tr>
            <td><%= link_to favored.name, favored_path_url(favored), title: favored.name %></td>
            <td><%= number_to_currency(favored.total_transactions) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>